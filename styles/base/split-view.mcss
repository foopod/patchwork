SplitView {
  display: flex
  flex: 3
  div.main {
    display: flex
    flex-direction: column
    flex: 1
    overflow-y: auto
  }
  div.side {
    width: 280px
    padding: 20px
    overflow-y: auto
    background: var(--tertiary-bg)
  }
  div.side h2 {
    margin-top: 20px
    margin-bottom: 8px
    color: var(--secondary-font)
    font-weight: normal
    span.sub {
      font-weight: normal
      font-size: 90%
    }
  }
}
