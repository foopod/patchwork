GatheringCard {
  border: 1px solid #ddd
  padding: 10px
  margin-bottom: 10px
  a.image {
    display: block
    margin-top: 10px
    height: 300px
    background-size: cover
    background-repeat: no-repeat
    background-position: center
  }
  div.attending {
    margin: 10px 0
    padding-top: 10px
    div.title {
      font-size: 75%
      margin-bottom: 10px
      text-align: center
    }
    div.attendees {
      text-align: center
      a + a {
        margin-left: 10px
      }
      (img) {
        height: 45px
        width: 45px
        border-radius: 5px
      }
    }
    div.actions {
      text-align: center
      margin-top: 10px
      button {
        font-size: 100%
        :first-child {
          ::before {
            content: '✔ '
          }
        }
      }
      button + button {
        margin-left: 5px
      }
    }
  }
  div.title {
    font-size: 200%
    button {
      font-size: 50%
      float: right
      ::before {
        content: '✎ '
      }
    }
  }
  div.time {
    color: #555
    font-size: 120%
  }
  div.description {
    border-top: 3px solid #ccc
    margin-top: 10px
  }
}
