FeedEvent {
  display: flex
  flex-direction: column
  width: 100%
  margin: 25px auto
  background: var(--secondary-bg)
  box-shadow: 0 2px 4px var(--shadow)
  -group {
    -expanded {
      a.expand {
        :before {
          display: none
        }
      }
    }
    a.expand {
      display: block
      padding: 10px
      text-align: center
      cursor: pointer
      background: var(--tertiary-bg)
      color: var(--main-font)
      :before {
        content: 'â–¼ '
        font-size: 80%
      }
      :hover {
        color: black
      }
    }
    div.items {
      margin: -10px 15px
    }
  }
  -new, -unread {
    /* box-shadow: 0px 0px 2px #ffc800 */
    background: var(--tertiary-bg);
  }
  :empty {
    margin-bottom: -25px
  }
  div {
    flex: 1
  }
  div + div {
    border-top: 1px solid var(--tertiary-bg)
  }
  a.full {
    display: block
    padding: 10px
    text-align: center
    background: var(--tertiary-bg);
  }
  div.replies {
    font-size: 100%
    display: flex
    flex-direction: column
    div {
      flex: 1
      margin: 0
    }
    div + div {
      border-top: 1px solid var(--tertiary-bg)
    }
  }
  div.meta {
    font-size: 100%
    padding: 10px 20px
  }
}
